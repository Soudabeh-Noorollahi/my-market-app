{
  "compilerOptions": {
    "baseUrl": "./src",
    "checkJs": false,
    "paths": {
      "@/*": ["*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@configs/*": ["configs/*"],
      "@helper/*": ["helper/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@router/*": ["router/*"],
      "@services/*": ["services/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
